@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>OSU DevOps Webpage</title>
<link rel="stylesheet" href="style.css">
</head>

<body>

    <!-- =======================
         HEADER SECTION
         (Person 1)
         ======================= -->
    <header id="site-header">
        <!-- Top ribbon / OKSTATE link -->
        <div class="osu-ribbon">
            <a href="#" class="osu-link">↖ OKSTATE.EDU</a>
        </div>

        <!-- Logo + Navigation -->
        <div class="osu-header">
            <div class="osu-logo">OSU</div>
            <h1 class="osu-title">SPEARS SCHOOL OF BUSINESS</h1>

            <nav class="osu-nav" aria-label="Main Navigation">
                <ul>
                    <li><a href="#home">Home</a></li>
                    <li><a href="#jenkins">Jenkins</a></li>
                    <li><a href="#jira">Jira</a></li>
                    <li><a href="#review">Review</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
            </nav>
        </div>

        <div class="accent-bar"></div>
    </header>



    <!-- =======================
         MAIN SECTION
         (Person 2)
         ======================= -->
    <main id="site-main">
        <!-- Intro / Hero -->
        <section id="home" class="hero">
            <h2>Welcome to Our DevOps Project</h2>
            <p>This page demonstrates Jenkins & Jira features as part of our OSU DevOps assignment.</p>
        </section>

        <!-- Jenkins Feature Section -->
        <section id="jenkins">
            <h3>Jenkins Automation</h3>
            <p>Example features: automated builds, post-build testing, and deployment pipelines.</p>
        </section>

        <!-- Jira Feature Section -->
        <section id="jira">
            <h3>Jira Integration</h3>
            <p>Example features: issue linking to commits, Kanban workflow for agile tracking.</p>
        </section>

        <!-- Review Section -->
        <section id="review">
            <h3>Product Review</h3>
            <p>Brief analysis of Jenkins and Jira from an MIS perspective (strengths and weaknesses).</p>
        </section>

        <!-- Contact / Contributors -->
        <section id="contact">
            <h3>Contact & Contributors</h3>
            <ul>
                <li>Person 1 – Header Developer</li>
                <li>Person 2 – Main Section Developer</li>
                <li>Person 3 – Footer Developer</li>
            </ul>
        </section>
    </main>



    <footer class="site-footer">
        <div class="container footer-inner">
            <div class="footer-block">
                <h5>About This Project</h5>
                <p class="muted">Academic project for course demonstration. Uses official OSU colors and accessible design patterns.</p>
            </div>
            <div class="footer-block">
                <h5>Links</h5>
                <ul class="footer-links">
                    <li><a href="#review">Product Review</a></li>
                    <li><a href="#devops">DevOps Mapping</a></li>
                    <li><a href="#tools">Tools</a></li>
                    <li><a href="#cta">Executive Brief</a></li>
                </ul>
            </div>
            <div class="footer-block">
                <h5>Contact</h5>
                <p class="muted">Spears School of Business • Oklahoma State University</p>
            </div>
        </div>
        <div class="copyright">
            <div class="container">
                <small>© <span id="year"></span> Oklahoma State University (Academic Use). Built by Team.</small>
            </div>
        </div>
    </footer>
</html>
