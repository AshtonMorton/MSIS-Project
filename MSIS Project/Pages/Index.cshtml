<script>
    (function () {
      // respect reduced-motion users
      if (window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;

      const container = document.getElementById('toolTicker');
      if (!container) return;

      const track = container.querySelector('.ticker-track');
      const gap = parseFloat(getComputedStyle(track).gap) || 0;

      // Duplicate logos until we have > 2x container width
      function ensureFill() {
        const containerW = container.clientWidth;
        while (track.scrollWidth < containerW * 2) {
          track.innerHTML += track.innerHTML;
        }
      }
      ensureFill();
      window.addEventListener('resize', () => { /* optional: re-fill on resize if needed */ });

      let x = 0;
      let speed = 0.6;       // px per frame (~36px/s at 60fps)
      let paused = false;

      function step() {
        if (!paused) {
          x -= speed;

          // When the first child fully leaves, move it to the end and adjust offset
          const first = track.firstElementChild;
          const firstW = first.getBoundingClientRect().width + gap;
          if (-x >= firstW) {
            track.appendChild(first);
            x += firstW;
          }
          track.style.transform = `translateX(${x}px)`;
        }
        requestAnimationFrame(step);
      }
      requestAnimationFrame(step);

      // Pause on hover (optional)
      container.addEventListener('mouseenter', () => paused = true);
      container.addEventListener('mouseleave', () => paused = false);
    })();
</script>
